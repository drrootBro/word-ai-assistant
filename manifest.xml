<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="TaskPaneApp">

  <Id>f4e3d1c0-5a1b-4c2d-9e3f-4a5b6c7d8e9f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>RootBro</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="AI-Draft: AI Assistant"/>
  <Description DefaultValue="A clean, fast BYOK AI assistant for Word. No subscription, lifetime use." />

  <!-- Icons still hosted on GitHub -->
  <IconUrl DefaultValue="https://drrootbro.github.io/word-ai-assistant/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://drrootbro.github.io/word-ai-assistant/assets/icon-80.png"/>

  <!-- Updated Support URL -->
  <SupportUrl DefaultValue="https://rootbro.com/ai-draft/support.html"/>

  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="WordApi"/>
    </Sets>
  </Requirements>

  <DefaultSettings>
    <!-- Taskpane stays hosted on GitHub Pages -->
    <SourceLocation DefaultValue="https://drrootbro.github.io/word-ai-assistant/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>

          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup.Group1">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>

                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>

                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>

                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>

      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://drrootbro.github.io/word-ai-assistant/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://drrootbro.github.io/word-ai-assistant/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://drrootbro.github.io/word-ai-assistant/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <!-- Taskpane still on GitHub -->
        <bt:Url id="Taskpane.Url" DefaultValue="https://drrootbro.github.io/word-ai-assistant/taskpane.html"/>

        <!-- Learn More uses your new site -->
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://rootbro.com/ai-draft/"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="CommandsGroup.Label" DefaultValue="AI-Draft"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="AI-tools"/>
        <bt:String id="GetStarted.Title" DefaultValue="AI-Draft Installed"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open AI-Draft â€” your BYOK AI assistant"/>
        <bt:String id="GetStarted.Description" DefaultValue="AI-Draft is ready. Click the ribbon button to start writing faster with your own API key."/>
      </bt:LongStrings>

    </Resources>
  </VersionOverrides>
</OfficeApp>
